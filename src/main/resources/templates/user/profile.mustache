{{>layout/header}}
<main id="profile">
	<header class="profile__header">
		<div class="avatar__container">
			<form id="frm_profile_img" action="/user/profileUpload" method="post">
				<input type="file" name="profileImage" style="display: none;" />
			</form>
			<img src="/images/avatar.jpg" id="profile_image" style="cursor: pointer" />
		</div>
		<div class="profile__info">
			<div class="profile__title">
				<h1>{{respDto.user.username}}</h1>
					{{^respDto.pageHost}} <!-- pageHost가 False일 때 팔로우 보이게 함 -->
					{{#respDto.followState}}
					<a href="#">
						<button onclick="unFollow({{respDto.user.id}})" class="profile_edit_btn">팔로우 취소</button>
					</a>
					{{/respDto.followState}}
					{{^respDto.followState}}
					<a href="#">
						<button onclick="follow({{respDto.user.id}})" class="profile_follow_btn">팔로우</button>
					</a>
					{{/respDto.followState}}
					{{/respDto.pageHost}}
					{{#respDto.pageHost}}
					<a href="/user/profileEdit">
						<button class="profile_edit_btn">회원수정</button>
					</a>
					<a href="/image/uploadForm">
						<button class="profile_edit_btn">사진등록</button>
					</a>
					<a href="#">
					<i class="fa fa-cog fa-lg"></i>
					</a> 
					{{/respDto.pageHost}}
			</div>
			<ul class="profile__stats">
				<li class="profile__stat"><span class="profile__stat-number">{{respDto.imageCount}}</span>
					posts</li>
				<li class="profile__stat"><span class="profile__stat-number">{{respDto.followerCount}}</span>
					<a href="/follow/followerList/{{respDto.user.id}}">followers</a></li>
				<li class="profile__stat"><span class="profile__stat-number">{{respDto.followingCount}}</span>
					<a href="/follow/followingList/{{respDto.user.id}}">following</a></li>
			</ul>
			<p class="profile__bio">
				<span class="profile__fullname">{{respDto.user.name}}</span>
				<span>
				{{#respDto.user.bio}}
					{{respDto.user.bio}}
				{{/respDto.user.bio}}
				</span>
				<br/><br/>
				{{#respDto.user.website}}
					<a href="{{respDto.user.website}}" class="profile__link">{{respDto.user.website}}</a>
				{{/respDto.user.website}}
			</p>
		</div>
	</header>
		<div class="profile__photo-grid">
			<!-- 유저가 업로드한 Feed 사진 -->
			{{#respDto.images}} <!-- # : 컬렉션이면 for문으로 사용, 아니면 if문으로 사용됨 -->
				<div class="profile__photo">
					<a href="#">
						<img src="/upload/{{imageUrl}}">
					</a>
					<div class="profile__photo-overlay">
						<span class="profile__photo-stat">
							<i class="fa fa-heart"></i> {{likeCount}}
						</span>
						<span class="profile__photo-stat">
							<i class="fa fa-comment"></i> {{commentCount}}
						</span>
						
					</div>
				</div>
				{{/respDto.images}}
		</div>
</main>

<div class="profile__overlay">
	<i class="fa fa-times"></i>
	<div class="profile__overlay-container">
		<a href="/auth/logout" class="profile__overlay-link" id="logout">Log Out</a> 
		<a href="#" class="profile__overlay-link" id="cancel">Cancel</a>
	</div>
</div>

<script>
	$(function() {
		//이미지 클릭시 업로드창 실행
		$('#profile_image').click(function() {
			$("input[name='profileImage']").click();
		})
		//업로드 파일체인지가 됐을 경우 실행되는 이벤트  form태그에 fileProfile은 hidden으로 넣어줌
		$("input[name='profileImage']").change(function(e) {
			$("#frm_profile_img").submit();
		})
	})
</script>
<script src="/js/follow.js"></script>
{{>layout/footer}}
